{
  "manifest_version": 3,
  "name": "Focus Timer",
  "version": "1.0",
  "description": "Pomodoro style focus timer to boost productivity.",
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}